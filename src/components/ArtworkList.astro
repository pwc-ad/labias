---
import type { Artworks } from '@/constants/artworks';
import ArtworkListItem from './ArtworkListItem.astro';

interface Props {
	artworks: Artworks;
}

const { artworks } = Astro.props;
const sortedArtworks = artworks.sort((a, b) => a.title.localeCompare(b.title));
---

<ul class="md:columns-2 md:gap-15 xl:columns-3 xl:gap-20">
	{sortedArtworks.map((artwork) => <ArtworkListItem artwork={artwork} />)}
</ul>
